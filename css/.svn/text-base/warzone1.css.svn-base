body {
	background-color: #2B2B2B;
}

/* DIVERSES */
h1 {
	border: 3px dotted #FFF;
	background-color: #2B2B2B; /*#BCBCBC;*/
	color: #FF6505;
	padding: 5px;
}

input:hover {
	color: #FF6505;
	background-color: #2B2B2B;
}

/* GAME */
div.map {
    margin: 0 auto;
	float:left;
}

div.nyt {
	margin: 0 auto;
	float: left;
	width: 75%;
	font-weight: bold;
	font-style: italic;
	font-size: 15px;
	text-align: center;
}

div.mapRow {
}

div.mapTile {
	float: left;
	border: 1px solid black;
	background-color: #9b9b9b;
}

div.mapTile:hover {
    background-color: #333333;
}

div.gameBox {
	padding: 20px;
	background-image: url('graphics/lines.jpg');
	border: 5px solid #FF6505;
}

div.game {
}

div.gameFlankLeft,
div.gameFlankRight {
}

div.gameFlankLeft {
	float: left;
}

div.gameFlankiRight {
	clear: both;
}

div.messages {
	color: #d90000; 
}

/* GRAPHICS */
img.logo {
	width: 100%;
}

/* WELCOME */
div.welcomeBox {
    text-align: center;
}

div.welcomeInnerBoxCentered {
    width: 600px;
    margin: 0 auto;
    text-align: left;
}


/* FORMS */
div.form {
	width: 610px;
}

div.formPicture {
	float: left;
}

div.innerWelcomeFormContainer {
	text-align: left;
}
div.welcomeFormContainer {
	text-align: center;
	width: 615px;	
}


fieldset {
	background-color: #bcbcbc;
}

fieldset legend {
	font-weight: bold;
	color: #FF6505;
}

/* TOOLTIPS */
.tip {
	color: #fff;
	width: 172px;
	z-index: 13000;
}
 
.tip-title {
	font-weight: bold;
	font-size: 11px;
	margin: 0;
	padding: 8px 8px 4px;
	background: url('graphics/bubble.png') top left;
}
 
.tip-text {
	font-size: 11px;
	padding: 4px 8px 8px;
	background: url('graphics/bubble.png') bottom right;
}
