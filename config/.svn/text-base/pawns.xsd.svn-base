<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="root">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="pawns">
					<xs:complexType>
						<xs:sequence>
							<xs:element maxOccurs="unbounded" name="pawn">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="name" type="xs:string" />
										<xs:element name="hitpoints" type="xs:unsignedByte" />
										<xs:element name="walkRange" type="xs:unsignedByte" />
										<xs:element name="attackRange" type="xs:unsignedByte" />
										<xs:element name="bashArmor" type="xs:unsignedByte" />
										<xs:element name="bashAttack" type="xs:unsignedByte" />
										<xs:element name="pierceArmor" type="xs:unsignedByte" />
										<xs:element name="pierceAttack" type="xs:unsignedByte" />
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>