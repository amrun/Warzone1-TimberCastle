<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!-- paths -->
    <path>
	<uphpRoot>uphp/</uphpRoot>
	<baseUrl>http://warzone1.local/</baseUrl>
	<js>uphp/js/</js>
	<css>uphp/css/</css>
    </path>

    <!-- js to load by default -->
    <js>
	<file>mootools-1.2.4-core.js</file>
	<file>mootools-1.2.4.2-more.js</file>
    </js>

    <!-- css to load by default -->
    <css>
	<file>style.css</file>
	<file>contentStyle.css</file>
    </css>

    <commHandler>
	<mail>
	    <logOutgoing>true</logOutgoing>
	    <logMessage>Outgoing Mail. Subject: ###SUBJECT###, Message: ###MESSAGE###</logMessage>
	</mail>
	<!-- sql conf -->
	<sql>
	    <server>localhost</server>
	    <database>warzone1</database>
	    <username>root</username>
	    <password>gH05tm@5t3r</password>
	</sql>
    </commHandler>

    <!-- logging -->
    <logger>
	<file type="info">info.txt</file>
	<file type="warning">warning.txt</file>
	<dateFormat>d.m.Y - H:i:s</dateFormat>
    </logger>

    <!-- configuration for generated html tags -->
    <html>
	<pageTitle>Warzone1 - Timber Castle</pageTitle>
	<bodyClass>body</bodyClass>
    </html>

    <!-- language-settings -->
    <localization>
	<dateFormat>d.m.Y</dateFormat>
	<language>de_CH</language>
    </localization>
</root>
